                    </preprocessing>
                    <master_item>
                        <key>vfs.file.contents[{$DBS_MYSQL_BACKUP_FILE_INFO}]</key>
                    </master_item>
                </item>
                <item>
                    <name>[MySQL] Instance '{$DBS_MYSQL_INSTANCE}' backup: Last  incremental database backup (duration)</name>
                    <type>DEPENDENT</type>
                    <key>mysql.percona.backup[{$DBS_MYSQL_INSTANCE},database_incr_duration]</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <units>s</units>
                    <applications>
                        <application>
                            <name>MySQL: Backup</name>
                        </application>
