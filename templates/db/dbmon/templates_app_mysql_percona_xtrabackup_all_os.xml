                    <type>DEPENDENT</type>
                    <key>mysql.percona.backup[{$DBS_MYSQL_INSTANCE},database_full_size]</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <units>B</units>
                    <applications>
                        <application>
                            <name>MySQL: Backup</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.database_full_size</params>
