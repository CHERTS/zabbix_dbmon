                    </master_item>
                </item>
                <item>
                    <name>[MySQL] Instance '{$DBS_MYSQL_INSTANCE}' backup: Get raw data</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>vfs.file.contents[{$DBS_MYSQL_BACKUP_FILE_INFO}]</key>
                    <delay>30m</delay>
                    <history>30d</history>
                    <trends>0</trends>
