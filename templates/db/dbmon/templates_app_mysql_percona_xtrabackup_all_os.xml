<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2021-02-18T04:27:24Z</date>
    <groups>
        <group>
            <name>DBS.Templates/Modules</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>DBS_Template DB MySQL Backup Percona</template>
            <name>DB MySQL Backup (Active, DBMON, Percona, for all OS)</name>
            <groups>
                <group>
                    <name>DBS.Templates/Modules</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>MySQL: Backup</name>
                </application>
                <application>
                    <name>stubs</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>[MySQL] Instance '{$DBS_MYSQL_INSTANCE}' backup: Last full database backup</name>
                    <type>DEPENDENT</type>
                    <key>mysql.percona.backup[{$DBS_MYSQL_INSTANCE},database_full]</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <units>s</units>
                    <applications>
                        <application>
                            <name>MySQL: Backup</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.database_full</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>vfs.file.contents[{$DBS_MYSQL_BACKUP_FILE_INFO}]</key>
                    </master_item>
                </item>
                <item>
                    <name>[MySQL] Instance '{$DBS_MYSQL_INSTANCE}' backup: Last full database backup (duration)</name>
                    <type>DEPENDENT</type>
                    <key>mysql.percona.backup[{$DBS_MYSQL_INSTANCE},database_full_duration]</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <units>s</units>
                    <applications>
                        <application>
                            <name>MySQL: Backup</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.database_full_duration</params>
