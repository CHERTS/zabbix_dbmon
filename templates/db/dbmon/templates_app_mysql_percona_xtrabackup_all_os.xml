                    <value>/var/lib/zabbix/mysql_backup.info</value>
                    <description>Backup info file in json format</description>
                </macro>
                <macro>
                    <macro>{$DBS_MYSQL_FULL_BACKUP_CRIT}</macro>
                    <value>10d</value>
                </macro>
                <macro>
                    <macro>{$DBS_MYSQL_FULL_BACKUP_WARN}</macro>
                    <value>8d</value>
                </macro>
                <macro>
                    <macro>{$DBS_MYSQL_INCR_BACKUP_CRIT}</macro>
                    <value>5d</value>
                </macro>
                <macro>
                    <macro>{$DBS_MYSQL_INCR_BACKUP_WARN}</macro>
                    <value>2d</value>
                </macro>
                <macro>
                    <macro>{$DBS_MYSQL_INSTANCE}</macro>
                    <value>mysql_3306</value>
                    <description>Unique instance name of MySQL</description>
                </macro>
            </macros>
        </template>
    </templates>
