<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-01-29T07:00:35Z</date>
    <groups>
        <group>
            <name>DBS.Templates/Modules</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>DBS_Template App Zabbix Agent DBMON Active Windows</template>
            <name>App Zabbix Agent for Windows (Active, DBMON)</name>
            <description>Template for monitoring Zabbix Agent for Windows (Active, DBMON, Memory)</description>
            <groups>
                <group>
                    <name>DBS.Templates/Modules</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Zabbix agent (DBMON)</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>[DBMON] Agent memory usage</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>proc_info[{$DBS_ZABBIX_DBMON_EXE_NAME},vmsize]</key>
                    <history>30d</history>
                    <units>B</units>
                    <applications>
                        <application>
                            <name>Zabbix agent (DBMON)</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JAVASCRIPT</type>
                            <params>return Math.round(value*1024);</params>
                        </step>
                    </preprocessing>
                    <triggers>
                        <trigger>
                            <expression>{max(10m)}&gt;{$DBS_ZABBIX_DBMON_MEM_USAGE_WARN}</expression>
                            <name>Zabbix agent for database monitoring is high memory usage</name>
                            <opdata>(current usage: {ITEM.LASTVALUE}, threshold: {$DBS_ZABBIX_DBMON_MEM_USAGE_WARN}, alert started: {ITEM.VALUE})</opdata>
                            <priority>WARNING</priority>
                            <description>Агент мониторинга баз данных (zabbix_agentd_dbmon.exe) потребляет много оперативной памяти (более {$DBS_ZABBIX_DBMON_MEM_USAGE_WARN} (МБайт)).&#13;
Возможно агент делает слишком много и часто проверки, так же возможно существует утечка памяти в агенте.&#13;
Доведите информацию до эксперта.</description>
                            <tags>
                                <tag>
                                    <tag>Service</tag>
                                    <value>zabbix-agentd-dbmon</value>
                                </tag>
                            </tags>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$DBS_ZABBIX_DBMON_EXE_NAME}</macro>
                    <value>zabbix_agentd_dbmon.exe</value>
                </macro>
                <macro>
                    <macro>{$DBS_ZABBIX_DBMON_MEM_USAGE_WARN}</macro>
                    <value>50M</value>
                    <description>Mbyte</description>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>
