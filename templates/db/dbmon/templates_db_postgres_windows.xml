                    <type>ZABBIX_ACTIVE</type>
                    <key>service.info[{$DBS_PGSQL_SERVICE_NAME},state]</key>
                    <history>30d</history>
                    <applications>
                        <application>
                            <name>PgSQL: Info</name>
                        </application>
                    </applications>
