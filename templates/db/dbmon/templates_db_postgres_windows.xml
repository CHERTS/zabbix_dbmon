                    <delay>1h</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>PgSQL: Info</name>
                        </application>
                    </applications>
                </item>
            </items>
            <tags>
                <tag>
                    <tag>OS</tag>
                    <value>Windows</value>
                </tag>
            </tags>
